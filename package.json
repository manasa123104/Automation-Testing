{
  "name": "automation-test-cases",
  "version": "1.0.0",
  "description": "Automation test cases for Apple Sign-In Authentication",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:apple": "jest apple-signin-test.js",
    "test:performance": "jest performance-test.js"
  },
  "devDependencies": {
    "@testing-library/react-native": "^12.0.0",
    "@testing-library/jest-native": "^5.4.0",
    "jest": "^29.0.0",
    "jest-expo": "^49.0.0"
  },
  "dependencies": {
    "expo-apple-authentication": "^5.0.0",
    "react-native": "^0.72.0"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "testMatch": [
      "**/*.test.js",
      "**/*.test.ts",
      "**/*.test.tsx"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ]
  }
}


